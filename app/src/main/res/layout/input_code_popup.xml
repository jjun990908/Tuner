<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="400dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_codeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="정품인증 코드입력"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설명설명설명설명설명설명설명설명설명설명설명설명설명"
        app:layout_constraintTop_toBottomOf="@id/text_codeview"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/editText_inputcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="정품인증 코드 입력"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Explanation" />

    <ImageButton
        android:id="@+id/btn_confirmcode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/button_help"
        app:layout_constraintTop_toBottomOf="@id/text_Explanation"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/editText_inputcode"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_Explanation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="짧은설명"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_inputcode" />
    <ImageButton
        android:id="@+id/btn_buycode"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/button_help"
        app:layout_constraintTop_toBottomOf="@+id/text_Explanation2"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btn_confirm"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/button_help"
        app:layout_constraintTop_toBottomOf="@+id/text_Explanation2"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>