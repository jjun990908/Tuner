<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="300dp"
    android:background="@color/popupbg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_codeview"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="정품인증 코드등록"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:background="@drawable/codeviewdesign"
        android:gravity = "center_horizontal|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="X"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위키위키 정품코드를 등록해주세요."
        android:textColor="@color/Black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/text_codeview"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/editText_inputcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="코드입력"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:background="@color/writecode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_Explanation" />

    <Button
        android:id="@+id/btn_confirmcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_Explanation"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/editText_inputcode"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_Explanation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="정품등록 번호가 없을 시 구매 가능합니다."
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_inputcode" />
    <Button
        android:id="@+id/btn_buycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_Explanation2"
        android:layout_marginTop="30dp"
        android:text="코드 구매"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_Explanation2"
        android:layout_marginTop="30dp"
        android:text="등록"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>